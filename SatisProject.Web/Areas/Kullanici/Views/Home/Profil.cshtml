@using SatisProject.Web.Code;
<nav class="navbar text-light mb-3 bg-white shadow" style="border-radius: 15px !important;">
    <div class="container-fluid">
        <h2><a class="navbar-brand fs-4" style="color:#858796;">Profilim</a></h2>
        <form class="d-flex" role="search">
            @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" onclick="Yeni()">
            Depoya Ekleme Yap
            </button> *@
            <input type="text"
                   class="form-control d-none"
                   id="kullaniciGizliId"
                   value="@Repo.Session.Id" />
        </form>
    </div>
</nav>


<div class="main-body bg-white p-1" id="profile">
</div>

<div class="modal fade"
     id="staticBackdrop"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Bilgilerim</h1>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-3 needs-validation" id="kullaniciEkleForm" novalidate>

                    <input type="text"
                           class="form-control d-none"
                           id="idG"
                           required />

                    <div class="col-md-6">
                        <label for="tcNo" class="form-label">Kullanıcı Adı Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="kullaniciAdiG"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="mailAdress" class="form-label">Mail Adres  Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="mailAdressG"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>

                    <div class="col-md-6">
                        <label for="telNo" class="form-label">Telefon Numarası Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="telNoG"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>
                    <div class="col-md-6 d-none">
                        <label class="form-label">Kullanıcı Durumunu Seçiniz :</label>
                        <select class="form-select" id="aktifG" required>
                            <option selected value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Adres Bilgilerini Giriniz :</label>
                        <textarea class="form-control" id="acikAdresG"></textarea>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Vazgeç
                </button>
                <button class="btn btn-primary" type="submit" onclick="Guncelle()">Güncelle</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade"
     id="staticBackdrop1"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Parola Güncelle</h1>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-3 needs-validation" id="kullanici" novalidate>

                    <div class="col-md-12">
                        <label for="eskiSifre" class="form-label">Eski Şifrenizi Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="eskiSifre"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>

                    <div class="col-md-6">
                        <label for="yeniSifre" class="form-label">Yeni Şifrenizi Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="yeniSifre"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>

                    <div class="col-md-6">
                        <label for="yeniSifreTekrar" class="form-label">Yeni Şifrenizi Tekrar Giriniz :</label>
                        <input type="text"
                               class="form-control"
                               id="yeniSifreTekrar"
                               required />
                        <div class="invalid-feedback">Bu alan boş geçilemez.</div>
                    </div>



                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Vazgeç
                </button>
                <button class="btn btn-primary" type="submit" onclick="SifreGuncelle()">Güncelle</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/kullanici/profil.js" asp-append-version="true"></script>