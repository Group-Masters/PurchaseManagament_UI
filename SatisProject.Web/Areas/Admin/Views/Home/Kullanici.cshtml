<script>
    (() => {
        "use strict";

        const forms = document.querySelectorAll(".needs-validation");
        const kullanici = document.querySelectorAll("#kullaniciEkleForm");
        Array.from(forms).forEach((kullanici) => {
            kullanici.addEventListener(
                "submit",
                (event) => {
                    if (!kullanici.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    kullanici.classList.add("was-validated");
                },
                false
            );
        });
    })();
</script>
