                    <button class="btn btn-primary" type="submit" onclick="GuncelleArtir()">Güncelle</button>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

<div class="modal fade"
     id="staticBackdropAzalt"
