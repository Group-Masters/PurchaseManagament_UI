@using SatisProject.Web.Code;
@using SatisProject.Web.Models;

<nav class="navbar text-light mb-3 bg-white shadow" style="border-radius: 15px !important;">
    <div class="container-fluid justify-content-between">
        <h2><a class="navbar-brand fs-4" style="color:#858796;">Birim Raporları</a></h2>
        <form class="d-flex" role="search">
            <label class="form-label text-black mt-2" for="birim" style="width:120px;">Birim Seçiniz :</label>
            <select class="form-select" id="birim" style="width:190px;">
                <option class="d-none" value="@Repo.Session.DepartmentId" selected></option>
            </select>
        </form>
    </div>
</nav>

<div id="divBirim" style="overflow-x: auto;">
</div>

<div class="modal fade" id="detayModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="divDetay">
            </div>
        </div>
    </div>
</div>
<script src="~/js/raporlar/birimrapor.js" asp-append-version="true"></script>